{
    "name": "deepfake-detection-api",
    "type": "web",
    "env": "node",
    "buildCommand": "npm install",
    "startCommand": "node app.js",
    "healthCheckPath": "/api/health",
    "envVars": [
        {
            "key": "NODE_ENV",
            "value": "production"
        },
        {
            "key": "PORT",
            "value": "8080"
        },
        {
            "key": "JWT_SECRET",
            "value": "your-jwt-secret-value",
            "isSecret": true
        },
        {
            "key": "MONGODB_URI",
            "value": "your-mongodb-connection-string",
            "isSecret": true
        }
    ],
    "autoDeploy": true
}